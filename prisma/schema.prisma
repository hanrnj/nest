generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Products {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  price     Int      @db.Int
  createdAt DateTime @default(now()) @db.DateTime(0)
  updatedAt DateTime @updatedAt

  @@map("Products")
}